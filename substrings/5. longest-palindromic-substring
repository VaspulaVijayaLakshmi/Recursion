class Solution {
public:
    string longestPalindrome(string s) {

        int maxi=0;
        string lps = "";
        int n=s.size();
        int strt =0,end=0;


        for(int i=0;i<n;i++){

             strt = i;
             end = i;

            // even
            while(strt>=0 && end<n && s[strt] == s[end]){
                strt--;
                end++;
            }

            if(maxi < end-strt-1 ){
                maxi = end-strt-1;
                lps = s.substr(strt+1,maxi);
            }


            strt=i;
            end = i+1;
            // odd
            while(strt>=0 && end<n && s[strt] == s[end]){
               strt--;
               end++;

            }

           if(maxi < end-strt-1 ){
                maxi = end-strt-1;
                lps = s.substr(strt+1,maxi);
            }

        }
        
        return lps;
        
    }
};

